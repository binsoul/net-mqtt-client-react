{
    "name": "binsoul/net-mqtt-client-react",
    "description": "Asynchronous MQTT client built on React",
    "keywords": [
        "net",
        "mqtt",
        "client"
    ],
    "homepage": "https://github.com/binsoul/net-mqtt-client-react",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Mößler",
            "email": "code@binsoul.de",
            "homepage": "https://github.com/binsoul",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "binsoul/net-mqtt": "^0.3",
        "react/promise": "^2.7",
        "react/socket": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "friendsofphp/php-cs-fixer": "^2",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "BinSoul\\Net\\Mqtt\\Client\\React\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinSoul\\Test\\Net\\Mqtt\\Client\\React\\": "tests"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": [
            "php-cs-fixer fix src --rules=@Symfony,-yoda_style,-no_superfluous_phpdoc_tags",
            "php-cs-fixer fix tests --rules=@Symfony,-yoda_style,-no_superfluous_phpdoc_tags"
        ],
        "analyze": "phpstan analyse -l 7 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
