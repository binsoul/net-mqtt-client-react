{
    "name": "binsoul/net-mqtt-client-react",
    "description": "Asynchronous MQTT client built on React",
    "keywords": [
        "net",
        "mqtt",
        "client"
    ],
    "homepage": "https://github.com/binsoul/net-mqtt-client-react",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Mößler",
            "email": "code@binsoul.de",
            "homepage": "https://github.com/binsoul",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">= 8.3",
        "binsoul/net-mqtt": "^1",
        "evenement/evenement": "^3",
        "react/event-loop": "^1.1",
        "react/promise": "^3",
        "react/socket": "^1.3"
    },
    "require-dev": {
        "binsoul/coding-standard": "^2",
        "phpstan/phpstan": "^2",
        "phpunit/phpunit": "^9",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "BinSoul\\Net\\Mqtt\\Client\\React\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinSoul\\Test\\Net\\Mqtt\\Client\\React\\": "tests"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": "ecs check src tests --config vendor/binsoul/coding-standard/easy-coding-standard.php --fix",
        "analyze": "phpstan analyse -l max src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
